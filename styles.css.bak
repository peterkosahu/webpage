body {
  margin: 0;
  padding: 0;
}

.slider {
  width: 100%;
  height: 400px; /* A kép magassága */
  overflow: hidden; /* Túlcsorduló tartalom elrejtése */
  position: relative; /* Relatív pozícionálás az abszolút pozícionáláshoz */
}

.slide {
  width: 100%;
  height: 100%;
  position: absolute; /* Abszolút pozícionálás a konténeren belül */
  top: 0;
  left: 0;
  background-size: cover;
  background-position: center;
  opacity: 0;
  transition: opacity 0.5s ease;
}

.slide1 {
  background-image: url('reference1.png');
}

